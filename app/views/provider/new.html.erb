<table style="width:100%">
    <tr>
        <td><h1>Add Provider</h1></td>
        <td style="float:right">
            <a href="/">
                <button type="button" class="btn btn-info" value="edit">Dashboard</button>
            </a>
        </td>
    </tr>
</table>
<%= form_for :'provider', url: provider_path do |f| %>
<% if @provider.errors.any? %>
    <% @provider.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg %></div>
    <% end %>
<% end %>
<table class="table table-striped">
    <tr>
    <td><%= f.label :anonymous %>&nbsp&nbsp
        <%= check_box_tag(:anonymous, :onclick => "$('Name')[this.checked ? 'show' : 'hide']();") %></td>
    <td><%= f.label :Name %>&nbsp&nbsp
        <%= f.text_field :providername %></td>
    </tr>
    <tr>
    <td><%= f.label :'Provider Type' %></td>
    <td><%= f.select :description, [['Individual','Individual'], ['Organization','Organization']] %></td>
    </tr>
    <tr>
    <td><%= f.label :'Donation Type' %></td>
    <td><%= f.select :totaldonations, [['Donated','Donated'], ['Purchased','Purchased']] %></td>
    </tr>
    <tr>
    <td colspan="2"><%= f.submit %></td>
    </tr>
</table>
<% end %>
