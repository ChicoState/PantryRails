<table style="width:100%">
    <tr>
        <td><h1>Add Items</h1></td>
        <td style="float:right">
            <a href="/">
                <button type="button" class="btn btn-info" value="edit">Dashboard</button>
            </a>
        </td>
    </tr>
</table>
<%= form_for :'items', url: items_path do |f| %>
<% if @items.errors.any? %>
    <% @items.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg %></div>
    <% end %>
<% end %>
<table class="table table-striped">
    <tr>
        <td><%= f.label :Name %></td>
        <td><%= f.text_field(:name, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td><%= f.label :Donor %></td>
        <td><%= f.text_field(:donor, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td><%= f.label :Quantity %></td>
        <td><%= f.text_field(:quantity, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td><%= f.label :'Received Date' %></td>
        <td><%= f.date_field(:received, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td><%= f.label :'Expiry Date' %></td>
        <td><%= f.date_field(:expiry, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td><%= f.label :Price %></td>
        <td><%= f.text_field(:price, {:class => 'form-control'}) %></td>
    </tr>
    <tr>
        <td colspan="2"><%= f.submit({:class => 'btn btn-primary'}) %></td>
    </tr>
</table>
<% end %>