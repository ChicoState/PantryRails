<table style="width:100%">
    <tr>
        <td><h1>Edit Appliance</h1></td>
        <td style="float:right">
            <a href="/appinventory">
                <button type="button" class="btn btn-info" value="edit">Goto Items</button>
            </a>
        </td>
    </tr>
</table>
<%= form_for :appinventory, url: appinventory_path(@appinventory), method: :patch do |f| %>
    <% if @appinventory.errors.any? %>
        <% @appinventory.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%=msg %></div>
        <% end %>
    <% end %>
    <table class="table table-striped">
        <tr>
            <td><%= f.label :Name %></td>
            <td><%= f.text_field(:appliancename, {:class => 'form-control'}) %></td>
        </tr>
        <tr>
            <td><%= f.label :Quantity %></td>
            <td><%= f.text_field(:totalquantity, {:class => 'form-control'}) %></td>
        </tr>
        <tr>
            <td colspan="2"><%= f.submit({:class => 'btn btn-primary'}) %></td>
        </tr>
    </table>
<% end %>